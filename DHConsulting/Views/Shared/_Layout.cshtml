    <style>
        :root {
            --primary-black: #0a0a0a;
            --primary-gold: #fbbf24;
            --primary-gold-light: #fcd34d;
            --primary-gold-dark: #d97706;
            --primary-gray: #6b7280;
            --primary-gray-light: #9ca3af;
            --primary-gray-dark: #374151;
            --bg-gradient: linear-gradient(135deg, #0a0a0a 0%, #1f1f1f 50%, #2a2a2a 100%);
        }

        .gradient-bg {
            background: var(--bg-gradient);
        }

        .glass-effect {
            background: rgba(251, 191, 36, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(251, 191, 36, 0.2);
        }

        .floating-animation {
            animation: float 6s ease-in-out infinite;
        }

        @@keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-20px); }
        }

        .pulse-glow {
            animation: pulse-glow 2s infinite;
        }

        @@keyframes pulse-glow {
            0%, 100% { box-shadow: 0 0 20px rgba(251, 191, 36, 0.3); }
            50% { box-shadow: 0 0 30px rgba(251, 191, 36, 0.6); }
        }

        .hover-lift {
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .hover-lift:hover {
            transform: translateY(-12px);
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.4);
        }

        .text-gradient {
            background: linear-gradient(135deg, var(--primary-gold) 0%, var(--primary-gold-light) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .service-card {
            background: linear-gradient(145deg, #ffffff 0%, #f9fafb 100%);
            border: 2px solid #e5e7eb;
            transition: all 0.4s ease;
        }

        .service-card:hover {
            border-color: var(--primary-gold);
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(251, 191, 36, 0.1);
        }

        .testimonial-card {
            background: linear-gradient(145deg, #ffffff 0%, #fafafa 100%);
            border: 1px solid #e5e7eb;
        }

        body {
            font-family: 'Inter', sans-serif;
        }

        .font-caveat {
            font-family: 'Caveat', cursive;
        }

        .infinite-scroll {
            animation: infinite-scroll 25s linear infinite;
        }

        @@keyframes infinite-scroll {
            from { transform: translateX(0); }
            to { transform: translateX(-100%); }
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-gold) 0%, var(--primary-gold-dark) 100%);
            border: none;
            color: var(--primary-black);
            font-weight: 600;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, var(--primary-gold-light) 0%, var(--primary-gold) 100%);
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(251, 191, 36, 0.4);
        }

        .btn-outline-primary {
            border: 2px solid var(--primary-gold);
            color: var(--primary-gold);
            background: transparent;
        }

        .btn-outline-primary:hover {
            background: var(--primary-gold);
            color: var(--primary-black);
        }

        /* Dark mode improvements */
        [data-theme="dark"] {
            --primary-black: #ffffff;
            --primary-gray: #d1d5db;
            --primary-gray-light: #9ca3af;
            --primary-gray-dark: #6b7280;
        }

        [data-theme="dark"] .service-card {
            background: linear-gradient(145deg, #1f2937 0%, #111827 100%);
            border-color: #374151;
            color: #f9fafb;
        }

        [data-theme="dark"] .testimonial-card {
            background: linear-gradient(145deg, #1f2937 0%, #111827 100%);
            color: #f9fafb;
            border-color: #374151;
        }

        [data-theme="dark"] .text-gray-800 {
            color: #f9fafb !important;
        }

        [data-theme="dark"] .text-gray-700 {
            color: #e5e7eb !important;
        }

