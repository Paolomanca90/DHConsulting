@{
    ViewBag.Title = "ModifyPassword";
}

<h2>NewPassword</h2>

@if (ViewBag.Password != null)
{
    <p>ViewBag.Password</p>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Utente</h4>
        <hr />

        <div class="form-group">
            @Html.Label("Nuova password", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("NewPassword", null, new { @class = "form-control", type = "password" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

