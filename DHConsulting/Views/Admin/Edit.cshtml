@model DHConsulting.Models.Prodotto

@{
    ViewBag.Title = "Modifica Prodotto";
}


<section class="min-h-screen">
    <div class="container min-h-screen">
        <div class="md:flex min-h-screen">
            <div class="w-1/3 md:px-3" style="background: url(https://images.unsplash.com/photo-1512295767273-ac109ac3acfa?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mzl8fGluZm9ybWF0aW9uJTIwdGVjaG5vbG9neXxlbnwwfHwwfHx8MA%3D%3D); background-size: cover;">
            </div>

            <div class="w-full lg:w-2/3 px-7 py-12">
                @if (ViewBag.Errore != null)
                {
                    <div class="flex justify-center my-12">
                        <div class="flex w-full max-w-sm overflow-hidden rounded-lg shadow-md border border-red-500">
                            <div class="flex items-center justify-center w-12 bg-red-500">
                                <svg class="w-6 h-6 text-white fill-current" viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M20 3.36667C10.8167 3.36667 3.3667 10.8167 3.3667 20C3.3667 29.1833 10.8167 36.6333 20 36.6333C29.1834 36.6333 36.6334 29.1833 36.6334 20C36.6334 10.8167 29.1834 3.36667 20 3.36667ZM19.1334 33.3333V22.9H13.3334L21.6667 6.66667V17.1H27.25L19.1334 33.3333Z" />
                                </svg>
                            </div>

                            <div class="px-4 py-2 -mx-3">
                                <div class="mx-3">
                                    <span class="font-semibold text-red-500 dark:text-red-400">Attenzione</span>
                                    <p class="text-sm">
                                        @ViewBag.Errore
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                @using (Html.BeginForm("Edit", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.IdProdotto)
                    <div class="pb-6 border-b border-gray-300 flex justify-between items-center">
                        <h5 class="text-lg md:text-xl font-semibold">Modifica Pacchetto</h5>
                        <input type="submit" value="Salva modifiche" class="btn bg-slate-300 text-black hover:bg-slate-500 hover:text-white text-md" />
                    </div>
                    <div class="gap-[30px] pt-6">
                        <div>
                            <div class="mt-6">
                                <div class="flex items-center mt-3">
                                    <i class="fa-regular fa-file text-slate-400 mr-4 text-2xl"></i>
                                    <div class="flex-1">
                                        <h6 class="font-medium mb-0">@Html.LabelFor(model => model.DescrizioneBreve)</h6>
                                        @Html.EditorFor(model => model.DescrizioneBreve, new { htmlAttributes = new { @class = "rounded-md p-2 border-2 w-full lg:w-2/3 mt-1" } })
                                        @Html.ValidationMessageFor(model => model.DescrizioneBreve, "", new { @class = "text-red-500" })
                                    </div>
                                </div>
                                <div class="flex items-center mt-3">
                                    <i class="fa-regular fa-file text-slate-400 mr-4 text-2xl"></i>
                                    <div class="flex-1">
                                        <h6 class="font-medium mb-0">@Html.LabelFor(model => model.DescrizioneLunga)</h6>
                                        @Html.TextAreaFor(model => model.DescrizioneLunga, new { @class = "rounded-md p-2 border-2 w-full lg:w-2/3 mt-1", @rows = 5 })
                                        @Html.ValidationMessageFor(model => model.DescrizioneLunga, "", new { @class = "text-red-500" })
                                    </div>
                                </div>
                                <div class="flex items-center mt-3">
                                    <i class="fa-solid fa-sack-dollar text-slate-400 mr-3 text-2xl"></i>
                                    <div class="flex-1">
                                        <h6 class="font-medium mb-0">@Html.LabelFor(model => model.Costo)</h6>
                                        @Html.EditorFor(model => model.Costo, new { htmlAttributes = new { @class = "rounded-md p-2 border-2 w-full lg:w-2/3 mt-1" } })
                                        @Html.ValidationMessageFor(model => model.Costo, "", new { @class = "text-red-500" })
                                    </div>
                                </div>
                                <div class="flex items-center">
                                    <i class="fa-solid fa-percent text-slate-400 mr-5 text-2xl"></i>
                                    <div class="flex-1 mt-3">
                                        <h6 class="font-medium mb-0">@Html.LabelFor(model => model.CostoScontato)</h6>
                                        @Html.EditorFor(model => model.CostoScontato, new { htmlAttributes = new { @class = "rounded-md p-2 border-2 w-full lg:w-2/3 mt-1" } })
                                        @Html.ValidationMessageFor(model => model.CostoScontato, "", new { @class = "text-red-500" })
                                    </div>
                                </div>
                                <div class="flex items-center mt-3">
                                    <i class="fa-regular fa-image text-slate-400 mr-4 text-2xl"></i>
                                    <div class="flex-1">
                                        <h6 class="font-medium mb-0">@Html.LabelFor(model => model.Image)</h6>
                                        @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "rounded-md p-2 border-2 w-full lg:w-2/3 mt-1", type = "file" } })
                                        @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-red-500" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <!--end grid-->
    </div>
    <!--end container-->
</section>
