@model DHConsulting.Models.Utente

@{
    ViewBag.Title = "AddAdmin";
    IEnumerable<DHConsulting.Models.Utente> lista = ViewBag.Utenti;
}

<section class="min-h-screen">
    <div class="container">
        <div class="md:flex min-h-screen">
            <div class="lg:w-1/4 md:w-1/3 md:px-3" style="background: url(https://images.unsplash.com/photo-1512295767273-ac109ac3acfa?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mzl8fGluZm9ybWF0aW9uJTIwdGVjaG5vbG9neXxlbnwwfHwwfHx8MA%3D%3D); background-size:cover;">
            </div>

            <div class="lg:w-3/4 md:w-2/3 px-7 my-12">
                <div>
                    <div class="pb-6 border-b border-gray-300 flex justify-between items-center">
                        <h5 class="text-xl font-semibold">Gestione Admin</h5>
                    </div>

                    @if (TempData["Successo"] != null)
                    {
                        <div class="flex justify-center my-12">
                            <div class="flex w-full max-w-md overflow-hidden rounded-lg shadow-md border border-blue-500">
                                <div class="flex items-center justify-center w-12 bg-blue-500">
                                    <svg class="w-6 h-6 text-white fill-current" viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M20 3.33331C10.8 3.33331 3.33337 10.8 3.33337 20C3.33337 29.2 10.8 36.6666 20 36.6666C29.2 36.6666 36.6667 29.2 36.6667 20C36.6667 10.8 29.2 3.33331 20 3.33331ZM16.6667 28.3333L8.33337 20L10.6834 17.65L16.6667 23.6166L29.3167 10.9666L31.6667 13.3333L16.6667 28.3333Z" />
                                    </svg>
                                </div>

                                <div class="px-4 py-2 -mx-3">
                                    <div class="mx-3">
                                        <span class="font-semibold text-blue-500 dark:text-blue-400">Complimenti</span>
                                        <p class="text-sm">@TempData["Successo"]</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    @if (ViewBag.Successo != null)
                    {
                        <div class="flex justify-center my-12">
                            <div class="flex w-full max-w-md overflow-hidden rounded-lg shadow-md border border-blue-500">
                                <div class="flex items-center justify-center w-12 bg-blue-500">
                                    <svg class="w-6 h-6 text-white fill-current" viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M20 3.33331C10.8 3.33331 3.33337 10.8 3.33337 20C3.33337 29.2 10.8 36.6666 20 36.6666C29.2 36.6666 36.6667 29.2 36.6667 20C36.6667 10.8 29.2 3.33331 20 3.33331ZM16.6667 28.3333L8.33337 20L10.6834 17.65L16.6667 23.6166L29.3167 10.9666L31.6667 13.3333L16.6667 28.3333Z" />
                                    </svg>
                                </div>

                                <div class="px-4 py-2 -mx-3">
                                    <div class="mx-3">
                                        <span class="font-semibold text-blue-500 dark:text-blue-400">Complimenti</span>
                                        <p class="text-sm">@ViewBag.Successo</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    @if (ViewBag.Errore != null)
                    {
                        <div class="flex justify-center my-12">
                            <div class="flex w-full max-w-sm overflow-hidden rounded-lg shadow-md border border-red-500">
                                <div class="flex items-center justify-center w-12 bg-red-500">
                                    <svg class="w-6 h-6 text-white fill-current" viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M20 3.36667C10.8167 3.36667 3.3667 10.8167 3.3667 20C3.3667 29.1833 10.8167 36.6333 20 36.6333C29.1834 36.6333 36.6334 29.1833 36.6334 20C36.6334 10.8167 29.1834 3.36667 20 3.36667ZM19.1334 33.3333V22.9H13.3334L21.6667 6.66667V17.1H27.25L19.1334 33.3333Z" />
                                    </svg>
                                </div>

                                <div class="px-4 py-2 -mx-3">
                                    <div class="mx-3">
                                        <span class="font-semibold text-red-500 dark:text-red-400">Attenzione</span>
                                        <p class="text-sm">
                                            @ViewBag.Errore
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="grid lg:grid-cols-2 grid-cols-1 gap-[30px] pt-12">
                        <div>
                            <h5 class="text-xl font-semibold mb-6">Nuovo admin:</h5>
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true, "", new { @class = "text-red-500" })
                                    <div class="mb-3">
                                        @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "text-md font-semibold mx-2" })
                                        <div>
                                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "rounded-md p-2 border-2 w-full mt-1" } })
                                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-red-500" })
                                        </div>
                                    </div>

                                    <div class="mb-7">
                                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "text-md font-semibold mx-2" })
                                        <div>
                                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "rounded-md p-2 border-2 w-full mt-1", type = "password" } })
                                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-red-500" })
                                        </div>
                                    </div>

                                    <div>
                                        <input type="submit" value="Aggiungi" class="btn bg-slate-300 text-black hover:bg-slate-500 hover:text-white w-full" />
                                    </div>

                                </div>
                            }
                        </div>

                        <div class="mt-[30px]">
                            <div class="flex flex-wrap">
                                <div class="w-full lg:w-auto max-w-2xl mx-auto shadow-lg rounded-md border border-gray-200 bg-base-100">
                                    <header class="px-5 py-4 border-b border-gray-200">
                                        <h2 class="font-semibold text-lg">Lista admin</h2>
                                    </header>
                                    @if (lista != null && lista.Any())
                                    {
                                        <div class="p-3">
                                            <div class="overflow-x-auto">
                                                <table class="table-auto w-full">
                                                    <thead class="text-xs font-semibold uppercase text-gray-400 bg-gray-50">
                                                        <tr>
                                                            <th class="p-2 whitespace-nowrap">
                                                                <div class="font-semibold text-left">User</div>
                                                            </th>
                                                            <th class="p-2 whitespace-nowrap">
                                                                <div class="font-semibold text-left">Credenziali</div>
                                                            </th>
                                                            <th class="p-2 whitespace-nowrap">
                                                                <div class="font-semibold text-left">Modifica</div>
                                                            </th>
                                                            <th class="p-2 whitespace-nowrap">
                                                                <div class="font-semibold text-left">Elimina</div>
                                                            </th>
                                                        </tr>
                                                    </thead>
                                                    <tbody class="text-sm divide-y divide-gray-100">
                                                        @foreach (var item in lista)
                                                        {
                                                            <tr>
                                                                <td class="p-2 whitespace-nowrap">
                                                                    <div class="text-center">
                                                                        <i class="fa-solid fa-circle-user text-2xl"></i>
                                                                    </div>
                                                                </td>
                                                                <td class="p-2 whitespace-nowrap">
                                                                    <div class="text-left">
                                                                        <p class="text-lg">@Html.DisplayFor(modelItem => item.Username)</p>
                                                                        <p class="text-lg">•••••••</p>
                                                                    </div>
                                                                </td>
                                                                <td class="p-2 whitespace-nowrap">
                                                                    <div class="text-center">
                                                                        <a href="@Url.Action("EditAdmin", "Admin", new { id = item.IdUtente })"><i class="fa fa-edit text-xl hover:text-slate-500"></i></a>
                                                                    </div>
                                                                </td>
                                                                <td class="p-2 whitespace-nowrap">
                                                                    <div class="text-center">
                                                                        <a href="@Url.Action("DeleteAdmin", "Admin", new { id = item.IdUtente })"><i class="fa fa-ban text-xl hover:text-slate-500"></i></a>
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <h3>Non ci sono altri admin</h3>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--end grid-->
    </div>
    <!--end container-->
</section>