@model DHConsulting.Models.Prodotto

@{
    ViewBag.Title = "Dettagli";
    TempData["IdProdotto"] = ViewContext.RouteData.Values["id"];
    List<int> pz = new List<int> { 1, 2, 3, 4, 5 };
    var cliente = ViewBag.Cliente as DHConsulting.Models.Cliente;
    var lista = ViewBag.Prodotti as List<DHConsulting.Models.Prodotto>;

    string packageType = "";
    string iconClass = "";
    string badgeClass = "";
    string primaryColor = "";

    if (Model.Costo < 200)
    {
        packageType = "Pacchetto Basic";
        iconClass = "fa-solid fa-lightbulb";
        badgeClass = "bg-yellow-500";
        primaryColor = "yellow";
    }
    else if (Model.Costo < 800)
    {
        packageType = "Pacchetto Plus";
        iconClass = "fa-solid fa-rocket";
        badgeClass = "bg-yellow-500";
        primaryColor = "yellow";
    }
    else
    {
        packageType = "Pacchetto Professional";
        iconClass = "fa-solid fa-crown";
        badgeClass = "bg-yellow-500";
        primaryColor = "yellow";
    }
}

@section style{
    <style>
        .product-hero {
            background: linear-gradient(135deg, #0a0a0a 0%, #1f1f1f 50%, #2a2a2a 100%);
            position: relative;
            overflow: hidden;
            min-height: 100vh;
        }

        .floating-elements {
            position: absolute;
            width: 100%;
            height: 100%;
            overflow: hidden;
            pointer-events: none;
        }

        .floating-shape {
            position: absolute;
            border-radius: 50%;
            opacity: 0.1;
            animation: float 8s ease-in-out infinite;
        }

        .floating-shape:nth-child(1) {
            width: 300px;
            height: 300px;
            background: linear-gradient(45deg, #fbbf24, #f59e0b);
            top: 10%;
            left: -10%;
            animation-delay: 0s;
        }

        .floating-shape:nth-child(2) {
            width: 200px;
            height: 200px;
            background: linear-gradient(45deg, #8b5cf6, #7c3aed);
            top: 60%;
            right: -5%;
            animation-delay: -3s;
        }

        .floating-shape:nth-child(3) {
            width: 150px;
            height: 150px;
            background: linear-gradient(45deg, #10b981, #059669);
            bottom: 20%;
            left: 50%;
            animation-delay: -6s;
        }

        @@keyframes float {
            0%, 100% { transform: translateY(0px) rotate(0deg); }
            33% { transform: translateY(-30px) rotate(3deg); }
            66% { transform: translateY(15px) rotate(-2deg); }
        }

        .product-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.3);
            transform: perspective(1000px) rotateY(-5deg);
            transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .product-card:hover {
            transform: perspective(1000px) rotateY(0deg) translateY(-10px);
            box-shadow: 0 30px 60px rgba(0, 0, 0, 0.3);
        }

        .product-image-container {
            position: relative;
            overflow: hidden;
            border-radius: 2rem;
            background: linear-gradient(145deg, #f8fafc, #e2e8f0);
        }

        .product-image {
            transition: all 0.6s ease;
            transform: scale(1.05);
        }

        .product-image-container:hover .product-image {
            transform: scale(1.1) rotate(2deg);
        }

        .floating-badge {
            position: absolute;
            top: -10px;
            right: -10px;
            z-index: 10;
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }

        .price-display {
            background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
            color: #000;
            border-radius: 2rem;
            padding: 1.5rem 2rem;
            position: relative;
            overflow: hidden;
        }

        .price-display::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            animation: shine 3s ease infinite;
        }

        @@keyframes shine {
            0% { left: -100%; }
            100% { left: 100%; }
        }

        .feature-list {
            background: linear-gradient(145deg, #f8fafc 0%, #f1f5f9 100%);
            border: 2px solid #e2e8f0;
            border-radius: 1.5rem;
            padding: 2rem;
            position: relative;
        }

        .feature-item {
            padding: 1rem;
            background: white;
            border-radius: 1rem;
            margin-bottom: 1rem;
            border: 1px solid #e5e7eb;
            transition: all 0.3s ease;
        }

        .feature-item:hover {
            transform: translateX(10px);
            border-color: #fbbf24;
            box-shadow: 0 10px 25px rgba(251, 191, 36, 0.15);
        }

        .action-panel {
            background: linear-gradient(145deg, #ffffff 0%, #f9fafb 100%);
            border: 2px solid #e5e7eb;
            border-radius: 2rem;
            padding: 2rem;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            position: sticky;
            top: 2rem;
        }

        .quantity-selector {
            background: #f8fafc;
            border-radius: 1rem;
            padding: 1rem;
            border: 2px solid #e2e8f0;
        }

        .cta-button {
            background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
            border: none;
            color: #000;
            font-weight: 700;
            padding: 1rem 2rem;
            border-radius: 1rem;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .cta-button:hover {
            background: linear-gradient(135deg, #fcd34d 0%, #fbbf24 100%);
            transform: translateY(-3px);
            box-shadow: 0 15px 30px rgba(251, 191, 36, 0.4);
        }

        .cta-button::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
            transition: left 0.5s ease;
        }

        .cta-button:hover::before {
            left: 100%;
        }

        .professional-form {
            background: linear-gradient(145deg, #fef7cd 0%, #fef3c7 100%);
            border: 2px solid #fbbf24;
            border-radius: 1.5rem;
            padding: 2rem;
        }

        .breadcrumb-nav {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 1rem;
            padding: 1rem 1.5rem;
        }

        /* Responsive adjustments */
        @@media (max-width: 1024px) {
            .product-card {
                transform: none;
            }

            .action-panel {
                position: static;
                margin-top: 2rem;
            }
        }

        @@media (max-width: 768px) {
            .product-hero {
                min-height: auto;
                padding: 2rem 0;
            }

            .floating-shape {
                display: none;
            }
        }
    </style>
}

