@model DHConsulting.Models.Prodotto

@{
    ViewBag.Title = "Dettagli";
    TempData["IdProdotto"] = ViewContext.RouteData.Values["id"];
    List<int> pz = new List<int> { 1, 2, 3, 4, 5 };
    var cliente = ViewBag.Cliente as DHConsulting.Models.Cliente;
    var lista = ViewBag.Prodotti as List<DHConsulting.Models.Prodotto>;

    string packageType = "";
    string iconClass = "";
    string badgeClass = "";
    string primaryColor = "";

    if (Model.Costo < 200)
    {
        packageType = "Pacchetto Basic";
        iconClass = "fa-solid fa-lightbulb";
        badgeClass = "bg-yellow-500";
        primaryColor = "yellow";
    }
    else if (Model.Costo < 800)
    {
        packageType = "Pacchetto Plus";
        iconClass = "fa-solid fa-rocket";
        badgeClass = "bg-yellow-500";
        primaryColor = "yellow";
    }
    else
    {
        packageType = "Pacchetto Professional";
        iconClass = "fa-solid fa-crown";
        badgeClass = "bg-yellow-500";
        primaryColor = "yellow";
    }
}

@section style{
    <style>
        .product-hero {
            background: linear-gradient(135deg, #0a0a0a 0%, #1f1f1f 50%, #2a2a2a 100%);
            position: relative;
            overflow: hidden;
            min-height: 100vh;
        }

        .floating-elements {
            position: absolute;
            width: 100%;
            height: 100%;
            overflow: hidden;
            pointer-events: none;
        }

        .floating-shape {
            position: absolute;
            border-radius: 50%;
            opacity: 0.1;
            animation: float 8s ease-in-out infinite;
        }

            .floating-shape:nth-child(1) {
                width: 300px;
                height: 300px;
                background: linear-gradient(45deg, #fbbf24, #f59e0b);
                top: 10%;
                left: -10%;
                animation-delay: 0s;
            }

            .floating-shape:nth-child(2) {
                width: 200px;
                height: 200px;
                background: linear-gradient(45deg, #8b5cf6, #7c3aed);
                top: 60%;
                right: -5%;
                animation-delay: -3s;
            }

            .floating-shape:nth-child(3) {
                width: 150px;
                height: 150px;
                background: linear-gradient(45deg, #10b981, #059669);
                bottom: 20%;
                left: 50%;
                animation-delay: -6s;
            }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0px) rotate(0deg);
            }

            33% {
                transform: translateY(-30px) rotate(3deg);
            }

            66% {
                transform: translateY(15px) rotate(-2deg);
            }
        }

        .product-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.3);
            transform: perspective(1000px) rotateY(-5deg);
            transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
        }

            .product-card:hover {
                transform: perspective(1000px) rotateY(0deg) translateY(-10px);
                box-shadow: 0 30px 60px rgba(0, 0, 0, 0.3);
            }

        .product-image-container {
            position: relative;
            overflow: hidden;
            border-radius: 2rem;
            background: linear-gradient(145deg, #f8fafc, #e2e8f0);
        }

        .product-image {
            transition: all 0.6s ease;
            transform: scale(1.05);
        }

        .product-image-container:hover .product-image {
            transform: scale(1.1) rotate(2deg);
        }

        .floating-badge {
            position: absolute;
            top: -10px;
            right: -10px;
            z-index: 10;
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0%, 100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }
        }

        .price-display {
            background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
            color: #000;
            border-radius: 2rem;
            padding: 1.5rem 2rem;
            position: relative;
            overflow: hidden;
        }

            .price-display::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
                animation: shine 3s ease infinite;
            }

        @@keyframes shine {
            0% {
                left: -100%;
            }

            100% {
                left: 100%;
            }
        }

        .feature-list {
            border: 2px solid #e2e8f0;
            border-radius: 1.5rem;
            padding: 2rem;
            position: relative;
        }

        .feature-item {
            padding: 1rem;
            background: white;
            border-radius: 1rem;
            margin-bottom: 1rem;
            border: 1px solid #e5e7eb;
            transition: all 0.3s ease;
        }

            .feature-item:hover {
                transform: translateX(10px);
                border-color: #fbbf24;
                box-shadow: 0 10px 25px rgba(251, 191, 36, 0.15);
            }

        .action-panel {
            border: 2px solid #e5e7eb;
            border-radius: 2rem;
            padding: 2rem;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            position: sticky;
            top: 2rem;
        }

        .quantity-selector {
            border-radius: 1rem;
            padding: 1rem;
            border: 2px solid #e2e8f0;
        }

        .cta-button {
            background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
            border: none;
            color: #000;
            font-weight: 700;
            padding: 1rem 2rem;
            border-radius: 1rem;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .cta-button:hover {
                background: linear-gradient(135deg, #fcd34d 0%, #fbbf24 100%);
                transform: translateY(-3px);
                box-shadow: 0 15px 30px rgba(251, 191, 36, 0.4);
            }

            .cta-button::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
                transition: left 0.5s ease;
            }

            .cta-button:hover::before {
                left: 100%;
            }

        .professional-form {
            background: linear-gradient(145deg, #fef7cd 0%, #fef3c7 100%);
            border: 2px solid #fbbf24;
            border-radius: 1.5rem;
            padding: 2rem;
        }

        .breadcrumb-nav {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 1rem;
            padding: 1rem 1.5rem;
        }

        /* Responsive adjustments */
        @@media (max-width: 1024px) {
            .product-card {
                transform: none;
            }

            .action-panel {
                position: static;
                margin-top: 2rem;
            }
        }

        @@media (max-width: 768px) {
            .product-hero {
                min-height: auto;
                padding: 2rem 0;
            }

            .floating-shape {
                display: none;
            }
        }

        /* Enhanced form styling */
        .professional-form {
            position: relative;
            transition: all 0.3s ease;
        }

        .form-group {
            position: relative;
            margin-bottom: 1.5rem;
        }

        .form-group input,
        .form-group textarea {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            border-width: 2px;
        }

        .form-group input:focus,
        .form-group textarea:focus {
            outline: none;
            transform: translateY(-1px);
            box-shadow: 0 10px 25px rgba(59, 130, 246, 0.15);
        }

        .form-group.input-focused label {
            color: #3b82f6;
            transform: translateY(-2px);
        }

        /* Success state for inputs */
        .border-green-500 {
            border-color: #10b981 !important;
            background-color: #f0fdf4;
        }

        .border-green-500:focus {
            box-shadow: 0 10px 25px rgba(16, 185, 129, 0.15) !important;
        }

        /* Error state for inputs */
        .border-red-500 {
            border-color: #ef4444 !important;
            background-color: #fef2f2;
        }

        .border-red-500:focus {
            box-shadow: 0 10px 25px rgba(239, 68, 68, 0.15) !important;
        }

        /* Character counter styling */
        #charCount {
            font-weight: 600;
            transition: color 0.3s ease;
        }

        /* Validation error messages */
        .validation-error-message {
            animation: slideInDown 0.3s ease;
            transition: all 0.3s ease;
        }

        @@keyframes slideInDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Enhanced button states */
        .cta-button:disabled {
            opacity: 0.7;
            cursor: not-allowed;
            transform: none !important;
        }

        .cta-button:disabled:hover {
            background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%) !important;
            box-shadow: none !important;
        }

        /* Contact info cards hover effects */
        .professional-form .grid .p-4 {
            transition: all 0.3s ease;
            cursor: default;
        }

        .professional-form .grid .p-4:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        }

        /* Input label animations */
        .form-group label {
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            margin-bottom: 0.5rem;
        }

        .form-group label i {
            margin-right: 0.5rem;
            transition: color 0.3s ease;
        }

        /* Registration suggestion card hover effect */
        .bg-gradient-to-r.from-blue-50 {
            transition: all 0.3s ease;
        }

        .bg-gradient-to-r.from-blue-50:hover {
            transform: translateX(5px);
            box-shadow: 0 5px 15px rgba(59, 130, 246, 0.1);
        }

        /* Responsive improvements for mobile */
        @@media (max-width: 768px) {
            .professional-form {
                padding: 1.5rem;
            }

            .form-group input,
            .form-group textarea {
                font-size: 16px; /* Prevents zoom on iOS */
            }

            .grid.md\\:grid-cols-2 {
                grid-template-columns: 1fr;
                gap: 1rem;
            }
        }

        /* Focus ring for accessibility */
        .form-group input:focus-visible,
        .form-group textarea:focus-visible {
            outline: 2px solid #3b82f6;
            outline-offset: 2px;
        }

        /* Loading spinner animation */
        .fa-spinner.fa-spin {
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        /* Enhanced textarea styling */
        .textarea {
            font-family: inherit;
            resize: vertical;
            min-height: 120px;
        }

        .textarea:focus {
            resize: vertical;
        }

        /* Contact info section styling */
        .bg-blue-50.border-2.border-blue-200 {
            background: linear-gradient(145deg, #dbeafe 0%, #bfdbfe 100%);
            position: relative;
            overflow: hidden;
        }

        .bg-blue-50.border-2.border-blue-200::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.1), transparent);
            transform: rotate(45deg);
            transition: all 0.6s ease;
            opacity: 0;
        }

        .bg-blue-50.border-2.border-blue-200:hover::before {
            animation: shine 2s ease-in-out;
            opacity: 1;
        }

        @@keyframes shine {
            0% { transform: rotate(45deg) translateX(-100%); }
            100% { transform: rotate(45deg) translateX(100%); }
        }

        /* Improved field focus indicators */
        .form-group {
            position: relative;
        }

        .form-group::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 0;
            height: 2px;
            background: linear-gradient(90deg, #3b82f6, #8b5cf6);
            transition: width 0.3s ease;
        }

        .form-group.input-focused::after {
            width: 100%;
        }

        /* Success checkmark animation */
        @@keyframes checkmark {
            0% { transform: scale(0) rotate(45deg); }
            50% { transform: scale(1.2) rotate(45deg); }
            100% { transform: scale(1) rotate(45deg); }
        }

        .border-green-500::after {
            content: '✓';
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #10b981;
            font-weight: bold;
            animation: checkmark 0.3s ease;
        }

        /* Smooth transitions for all interactive elements */
        * {
            transition: border-color 0.3s ease, background-color 0.3s ease, color 0.3s ease, transform 0.3s ease;
        }
    </style>
}

<!-- Success/Error Messages -->
