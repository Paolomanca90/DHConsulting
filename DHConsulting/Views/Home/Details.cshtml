                    <p class="text-xl text-gray-600">Scopri gli altri servizi che potrebbero interessarti</p>
                </div>

                <div class="grid md:grid-cols-2 gap-8">
                    @foreach (var prodotto in lista)
                    {
                        string relatedPackageType = "";
                        string relatedIconClass = "";
                        string relatedGradient = "";

                        if (prodotto.Costo < 200)
                        {
                            relatedPackageType = "Pacchetto Basic";
                            relatedIconClass = "fa-solid fa-lightbulb";
                            relatedGradient = "from-emerald-400 to-emerald-600";
                        }
                        else if (prodotto.Costo < 800)
                        {
                            relatedPackageType = "Pacchetto Plus";
                            relatedIconClass = "fa-solid fa-rocket";
                            relatedGradient = "from-yellow-400 to-yellow-600";
                        }
                        else
                        {
                            relatedPackageType = "Pacchetto Professional";
                            relatedIconClass = "fa-solid fa-crown";
                            relatedGradient = "from-purple-400 to-purple-600";
                        }

                        <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-lg hover:shadow-xl transition-all duration-300 group" data-aos="fade-up">
