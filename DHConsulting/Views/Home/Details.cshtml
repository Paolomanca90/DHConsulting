}

<!-- Product Hero Section -->
<section class="product-hero">
    <!-- Floating Elements Background -->
    <div class="floating-elements">
        <div class="floating-shape"></div>
        <div class="floating-shape"></div>
        <div class="floating-shape"></div>
    </div>

    <div class="relative z-10 container mx-auto px-4 py-12">
        <div class="max-w-7xl mx-auto">
            <h1 class="text-3xl md:text-5xl font-bold text-white mb-8 leading-tight" data-aos="fade-down">
                Dettagli del
                <span class="text-gradient font-caveat text-4xl md:text-6xl pr-1">pacchetto</span>
            </h1>

            <div class="grid grid-cols-1 gap-8 items-start">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                    <!-- Product Visual -->
                    <div data-aos="fade-right" data-aos-duration="1000">
                        <div class="product-card rounded-3xl p-8 relative">
                            <!-- Floating Badge -->
                            <div class="floating-badge">
                                <div class="w-20 h-20 @badgeClass rounded-full flex items-center justify-center shadow-xl border-4 border-white">
                                    <i class="@iconClass text-2xl text-white"></i>
                                </div>
                            </div>

                            <!-- Product Image -->
                            <div class="product-image-container aspect-square">
                                <img src="~/Content/Img/@Model.Image"
                                     alt="@packageType"
                                     class="product-image w-full h-full object-cover rounded-2xl">
                            </div>
                        </div>
                    </div>

                    <!-- Product Info -->
                    <div data-aos="fade-up" data-aos-duration="1000" data-aos-delay="200" class="grid items-center">
                        <!-- Package Tags -->
                        <div class="flex flex-wrap gap-2 my-6">
                            <span class="px-4 py-2 bg-yellow-100 text-yellow-700 rounded-full text-sm font-semibold">
                                <i class="fa-solid fa-comments mr-1"></i>Consulenza
                            </span>
                            <span class="px-4 py-2 bg-yellow-100 text-yellow-700 rounded-full text-sm font-semibold">
                                <i class="fa-solid fa-file-pdf mr-1"></i>Report PDF
                            </span>
                            @if (Model.Costo >= 200)
                            {
                                <span class="px-4 py-2 bg-yellow-100 text-yellow-700 rounded-full text-sm font-semibold">
                                    <i class="fa-solid fa-chart-line mr-1"></i>Strategia
                                </span>
                            }
                            @if (Model.Costo >= 800)
                            {
                                <span class="px-4 py-2 bg-yellow-100 text-yellow-700 rounded-full text-sm font-semibold">
                                    <i class="fa-solid fa-globe mr-1"></i>Sito Web
                                </span>
                            }
                        </div>

                        <!-- Package Title -->
                        <div class="text-white mb-8">
                            <div class="inline-block px-4 py-2 bg-white/10 rounded-full text-sm font-semibold mb-4 backdrop-blur-sm">
                                <i class="fa-solid fa-star mr-2 text-yellow-400"></i>
                                @(Model.Costo < 200 ? "Starter Package" : Model.Costo < 800 ? "Popolare" : "Premium")
                            </div>
                            <h1 class="text-5xl md:text-6xl font-bold mb-4 leading-tight">
                                @packageType
                            </h1>
                            <p class="text-xl text-gray-300 leading-relaxed">
                                @Model.DescrizioneLunga
                            </p>
                        </div>

                        <!-- Price Display -->
                        <div class="price-display mb-8">
                            @if (Model.CostoScontato.HasValue)
                            {
                                <div class="flex items-end gap-3 mb-2">
                                    <span class="text-2xl line-through opacity-60">€@Model.Costo</span>
                                    <span class="text-5xl font-bold">€@Model.CostoScontato</span>
                                </div>
                                <div class="text-sm opacity-80">Prezzo scontato - Offerta limitata!</div>
                            }
                            else
                            {
                                <div class="flex justify-end gap-2">
                                    @if (Model.Costo > 700)
                                    {
                                        <span class="text-lg opacity-80">da</span>
                                    }
                                    <span class="text-6xl font-bold">€@Model.Costo</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="grid grid-cols-1 @(Model.Costo < 800 ? "lg:grid-cols-2" : "") gap-8">
                    <div data-aos="fade-right" data-aos-duration="1000" data-aos-delay="400">
                        <!-- Features List -->
                        <div class="feature-list bg-gray-50">
                            <h3 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
                                <i class="fa-solid fa-check-circle text-@primaryColor-500 mr-3"></i>
                                Cosa Include
                            </h3>

                            <div class="@(Model.Costo >= 800 ? "grid grid-cols-1 lg:grid-cols-2 gap-4" : "")">
                                <div class="feature-item bg-white">
                                    <div class="flex items-center">
                                        <i class="fa-solid fa-user-tie text-@primaryColor-500 mr-4 text-xl"></i>
                                        <div>
                                            <h4 class="font-semibold text-gray-800">Consulenza one-to-one</h4>
                                            <p class="text-gray-600 text-sm">@(Model.Costo < 200 ? "1 ora di consulenza dedicata" : Model.Costo < 800 ? "2 ore di consulenza dedicata" : "Consulenza completa")</p>
                                        </div>
                                    </div>
                                </div>

                                @if (Model.Costo > 200 && Model.Costo < 800)
                                {
                                    <div class="feature-item bg-white">
                                        <div class="flex items-center">
                                            <i class="fa-solid fa-clock text-@primaryColor-500 mr-4 text-xl"></i>
                                            <div>
                                                <h4 class="font-semibold text-gray-800">Gestione autonoma</h4>
                                                <p class="text-gray-600 text-sm">Possibilità di dividere le ore</p>
                                            </div>
                                        </div>
                                    </div>
                                }

                                <div class="feature-item bg-white">
                                    <div class="flex items-center">
                                        <i class="fa-solid fa-file-pdf text-@primaryColor-500 mr-4 text-xl"></i>
                                        <div>
                                            <h4 class="font-semibold text-gray-800">PDF di riepilogo</h4>
                                            <p class="text-gray-600 text-sm">Documento dettagliato con tutte le informazioni</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="feature-item bg-white">
                                    <div class="flex items-center">
                                        <i class="fa-solid fa-search text-@primaryColor-500 mr-4 text-xl"></i>
                                        <div>
                                            <h4 class="font-semibold text-gray-800">Analisi di fattibilità</h4>
                                            <p class="text-gray-600 text-sm">@(Model.Costo < 800 ? "Studio completo della soluzione da implementare" : "Studio completo del tuo progetto")</p>
                                        </div>
                                    </div>
                                </div>

                                @if (Model.Costo >= 800)
                                {

                                    <div class="feature-item bg-white">
                                        <div class="flex items-center">
                                            <i class="fa-solid fa-globe text-@primaryColor-500 mr-4 text-xl"></i>
                                            <div>
                                                <h4 class="font-semibold text-gray-800">Sito web completo</h4>
                                                <p class="text-gray-600 text-sm">Sito responsive, moderno e ottimizzato</p>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="feature-item bg-white">
                                        <div class="flex items-center">
                                            <i class="fa-solid fa-tools text-@primaryColor-500 mr-4 text-xl"></i>
                                            <div>
                                                <h4 class="font-semibold text-gray-800">3 mesi di supporto</h4>
                                                <p class="text-gray-600 text-sm">Assistenza tecnica inclusa</p>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Action Panel (3 columns) -->
                    <div data-aos="fade-left" data-aos-duration="1000" data-aos-delay="400">
                        <div class="action-panel bg-gray-50">
                            @if (Model.Costo < 800)
                            {
                                <!-- Standard Purchase Form -->
                                <div class="text-center mb-6">
                                    <h3 class="text-2xl font-bold text-gray-800 mb-2">Ordina Subito</h3>
                                    <p class="text-gray-600">Aggiungi al carrello e procedi</p>
                                </div>

                                using (Html.BeginForm("AddProdotto", "Home", FormMethod.Post, new { @class = "space-y-6" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <!-- Quantity Selector -->
                                    <div class="quantity-selector bg-white">
                                        <label class="block text-lg font-semibold text-gray-800 mb-3">
                                            <i class="fa-solid fa-calculator mr-2"></i>
                                            Seleziona Quantità
                                        </label>
                                        <div class="flex items-center justify-between">
                                            @Html.DropDownList("Quantita", new SelectList(pz), new
                                            {
                                                @class = "select select-bordered w-full select-lg bg-white",
                                                @id = "quantitySelect"
                                            })
                                            <div class="ml-4 text-right">
                                                <div class="text-sm text-gray-600">Totale:</div>
                                                <div class="text-2xl font-bold text-gray-800" id="totalPrice">€@Model.Costo</div>
                                            </div>
                                        </div>
                                    </div>

