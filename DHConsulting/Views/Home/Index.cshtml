<!-- Services Section -->
<section id="service" class="py-24 bg-gray-50">
    <div class="container mx-auto px-4">
        <!-- Section Header -->
        <div class="text-center mb-20" data-aos="fade-up">
            <div class="inline-block bg-yellow-100 text-yellow-700 px-6 py-3 rounded-full text-sm font-semibold mb-6 border border-yellow-200">
                I Nostri Pacchetti
            </div>
            <h2 class="text-4xl md:text-6xl font-bold text-gray-800 mb-6">
                Pacchetti Su Misura
                <span class="text-gradient">Per Te</span>
            </h2>
            <p class="text-xl text-gray-600 max-w-4xl mx-auto leading-relaxed">
                Scegli il servizio più adatto alle tue esigenze. Ogni pacchetto è pensato per offrirti
                il massimo valore e risultati concreti per il tuo business digitale.
            </p>
        </div>

        <!-- Service Cards -->
        <div class="grid lg:grid-cols-3 gap-8 max-w-7xl mx-auto mb-20">
            @{ int cardIndex = 0; }
            @foreach (var prodotto in Model.OrderBy(p => p.Costo))
            {
                string packageType = "";
                string iconClass = "";
                string badgeClass = "";
                string popular = "";

                if (prodotto.Costo < 200)
                {
                    packageType = "Pacchetto Basic";
                    iconClass = "fa-solid fa-lightbulb text-3xl text-green-600";
                    badgeClass = "bg-green-100 border-green-200";
                }
                else if (prodotto.Costo < 800)
                {
                    packageType = "Pacchetto Plus";
                    iconClass = "fa-solid fa-rocket text-3xl text-yellow-600";
                    badgeClass = "bg-yellow-100 border-yellow-300";
                    popular = "border-4 border-yellow-400 relative scale-105";
                }
                else
                {
                    packageType = "Pacchetto Professional";
                    iconClass = "fa-solid fa-crown text-3xl text-yellow-400";
                    badgeClass = "bg-gray-800 border-gray-600";
                }

                <div class="service-card rounded-3xl p-8 @popular" data-aos="fade-up" data-aos-delay="@((cardIndex + 1) * 100)">
                    @if (prodotto.Costo >= 200 && prodotto.Costo < 800)
                    {
                        <!-- Popular Badge -->
                        <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
                            <span class="bg-yellow-500 text-black px-6 py-2 rounded-full text-sm font-bold shadow-lg">
                                Più Richiesto
                            </span>
                        </div>
                    }

                    <div class="text-center">
                        <div class="w-20 h-20 @badgeClass rounded-full flex items-center justify-center mx-auto mb-6 border-4">
                            <i class="@iconClass"></i>
                        </div>
                        <h3 class="text-2xl font-bold text-gray-800 mb-3">@packageType</h3>
                        <p class="text-gray-600 mb-8">@prodotto.DescrizioneBreve</p>

                        <!-- Price -->
                        <div class="mb-8">
                            @if (prodotto.CostoScontato.HasValue)
                            {
                                <div class="text-lg text-gray-400 line-through mb-2">€@prodotto.Costo</div>
                                <span class="text-5xl font-bold text-gray-900">€@prodotto.CostoScontato</span>
                            }
                            else
                            {
                                <span class="text-5xl font-bold text-gray-900"><span class="text-gray-500 text-lg">@(prodotto.Costo > 700 ? "da " : "")</span>€@prodotto.Costo</span>
                            }
                        </div>

                        <!-- Features -->
                        <ul class="space-y-4 text-left mb-8">
                            @if (prodotto.Costo < 800)
                            {
                                <li class="flex items-center">
                                    <i class="fa-solid fa-check text-@(prodotto.Costo < 200 ? "green" : "yellow")-500 mr-3 text-lg"></i>
                                    <span class="text-gray-700">Consulenza one-to-one</span>
                                </li>
                                <li class="flex items-center">
                                    <i class="fa-solid fa-check text-@(prodotto.Costo < 200 ? "green" : "yellow")-500 mr-3 text-lg"></i>
                                    <span class="text-gray-700">PDF di riepilogo dettagliato</span>
                                </li>
                            }
                            @if (prodotto.Costo > 200 && prodotto.Costo < 800)
                            {
                                <li class="flex items-center">
                                    <i class="fa-solid fa-check text-yellow-500 mr-3 text-lg"></i>
                                    <span class="text-gray-700">Possibilità di splittare le ore</span>
                                </li>
                            }
                            <li class="flex items-center">
                                <i class="fa-solid fa-check text-@(prodotto.Costo < 200 ? "green" : prodotto.Costo < 800 ? "yellow" : "gray")-500 mr-3 text-lg"></i>
                                <span class="text-gray-700">Analisi di fattibilità completa</span>
                            </li>
                            @if (prodotto.Costo >= 800)
                            {
                                <li class="flex items-center">
                                    <i class="fa-solid fa-check text-gray-500 mr-3 text-lg"></i>
                                    <span class="text-gray-700">Sito web full responsive</span>
                                </li>
                                <li class="flex items-center">
                                    <i class="fa-solid fa-check text-gray-700 mr-3 text-lg"></i>
                                    <span class="text-gray-700">Revisioni durante il processo</span>
                                </li>
                                <li class="flex items-center">
                                    <i class="fa-solid fa-check text-gray-700 mr-3 text-lg"></i>
                                    <span class="text-gray-700">3 mesi di supporto tecnico gratuito</span>
                                </li>
                            }
                        </ul>

                        @if (prodotto.Costo < 800)
                        {
                            <a href="@Url.Action("Details", "Home", new { id = prodotto.IdProdotto })" class="btn @(prodotto.Costo < 200 ? "btn-outline-primary" : prodotto.Costo < 800 ? "btn-primary" : "btn-outline-primary") w-full btn-lg">
                                Scegli @(prodotto.Costo < 200 ? "Basic" : "Plus")
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("Details", "Home", new { id = prodotto.IdProdotto })" class="btn btn-outline-primary w-full btn-lg">
                                Richiedi Preventivo
                            </a>
                        }
                    </div>
                </div>
                cardIndex++;
            }
        </div>

        <!-- Process Steps -->
        <div class="mt-20" data-aos="fade-up">
            <div class="text-center mb-16">
                <h3 class="text-3xl font-bold text-gray-800 mb-4">Il tuo progetto in 4 semplici step</h3>
                <p class="text-gray-600 text-lg">Il processo semplificato per trasformare la tua idea in realtà</p>
            </div>

            <div class="grid md:grid-cols-4 gap-8 max-w-6xl mx-auto">
                <div class="text-center group">
                    <div class="w-20 h-20 bg-yellow-100 border-4 border-yellow-300 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:bg-yellow-200 transition-all duration-300">
                        <span class="text-2xl font-bold text-gray-800">1</span>
                    </div>
                    <h4 class="font-bold text-lg text-gray-800 mb-3">Scelta del servizio</h4>
                    <p class="text-gray-600">Selezione del servizio in linea con le tue esigenze</p>
                </div>
                <div class="text-center group">
                    <div class="w-20 h-20 bg-yellow-100 border-4 border-yellow-300 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:bg-yellow-200 transition-all duration-300">
                        <span class="text-2xl font-bold text-gray-800">2</span>
                    </div>
                    <h4 class="font-bold text-lg text-gray-800 mb-3">Conferma d'acquisto</h4>
                    <p class="text-gray-600">Una volta acquistato riceverai una mail con il riepilogo e le istruzioni</p>
                </div>
                <div class="text-center group">
                    <div class="w-20 h-20 bg-yellow-100 border-4 border-yellow-300 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:bg-yellow-200 transition-all duration-300">
                        <span class="text-2xl font-bold text-gray-800">3</span>
                    </div>
                    <h4 class="font-bold text-lg text-gray-800 mb-3">Booking dell'appuntamento</h4>
                    <p class="text-gray-600">Entro 48h verrai contattato per fissare l'incontro</p>
                </div>
                <div class="text-center group">
                    <div class="w-20 h-20 bg-yellow-100 border-4 border-yellow-300 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:bg-yellow-200 transition-all duration-300">
                        <span class="text-2xl font-bold text-gray-800">4</span>
                    </div>
                    <h4 class="font-bold text-lg text-gray-800 mb-3">Ci siamo!</h4>
                    <p class="text-gray-600">Siamo pronti per realizzare la tua idea</p>
                </div>
            </div>
        </div>
    </div>
</section>

