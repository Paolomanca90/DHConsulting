    <script>
        document.addEventListener('alpine:init', () => {
            Alpine.data('slider', () => ({
                active: 0,
                autorotate: true,
                autorotateTiming: 7000,
                testimonials: [
                    {
                        img: 'https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png',
                        quote: "La consulenza mi ha aiutato a sbloccare un problema sul mio progetto per il quale avevo perso quasi 2 settimane di lavoro.",
                        name: 'Luigi Rossi',
                        role: 'Privato'
                    },
                    {
                        img: 'https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png',
                        quote: "Avevo bisogno di un sito moderno ma facile da gestire per il mio e-commerce di scarpe. Sono contento di essermi affidato a Paolo.",
                        name: 'Andrea Minieri',
                        role: 'Azienda'
                    },
                    {
                        img: 'https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png',
                        quote: "Molto chiaro e preciso nelle spiegazioni durante le consulenze. Inoltre il pdf di recap che mi ha lasciato ha reso semplice implementare i suoi consigli.",
                        name: 'Silvia Pieretti',
                        role: 'Privato'
                    },
                ],
                init() {
                    if (this.autorotate) {
                        this.autorotateInterval = setInterval(() => {
                            this.active = this.active + 1 === this.testimonials.length ? 0 : this.active + 1
                        }, this.autorotateTiming)
                    }
                    this.$watch('active', callback => this.heightFix())
                },
                stopAutorotate() {
                    clearInterval(this.autorotateInterval)
                    this.autorotateInterval = null
                },
                heightFix() {
                    this.$nextTick(() => {
                        this.$refs.testimonials.style.height = this.$refs.testimonials.children[this.active + 1].offsetHeight + 'px'
                    })
                }
            }))
        })
    </script>
